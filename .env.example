# PV-CSER Pro Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pv_cser_pro

# Individual database connection parameters (alternative to DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pv_cser_pro
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# SSL Mode for database connection (disable, allow, prefer, require, verify-ca, verify-full)
DB_SSL_MODE=prefer

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=development

# Debug mode (true/false) - set to false in production
DEBUG=true

# Secret key for session management (generate a secure random string)
SECRET_KEY=your-secret-key-change-in-production

# Application host and port
APP_HOST=0.0.0.0
APP_PORT=8501

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=text

# Log file path (leave empty to log to stdout only)
LOG_FILE=logs/pv_cser_pro.log

# Enable log rotation (true/false)
LOG_ROTATION=true

# Maximum log file size in MB
LOG_MAX_SIZE_MB=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum upload size in MB
MAX_UPLOAD_SIZE_MB=200

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.json

# Temporary upload directory
UPLOAD_DIR=uploads

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================

# Export directory for generated reports
EXPORT_DIR=exports

# Default PDF page size (A4, Letter, Legal)
PDF_PAGE_SIZE=A4

# Excel engine (openpyxl, xlsxwriter)
EXCEL_ENGINE=xlsxwriter

# =============================================================================
# IEC 61853 CALCULATION SETTINGS
# =============================================================================

# Default temperature model (NMOT, NOCT, Faiman, PVsyst, Sandia, Ross)
DEFAULT_TEMP_MODEL=NMOT

# Default NMOT value if not specified (Â°C)
DEFAULT_NMOT=45.0

# Enable detailed loss calculations
ENABLE_DETAILED_LOSSES=true

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Enable caching (true/false)
CACHE_ENABLED=true

# Cache TTL in seconds
CACHE_TTL=3600

# Cache directory (for file-based caching)
CACHE_DIR=.cache

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# PVGIS API URL for climate data (optional)
PVGIS_API_URL=https://re.jrc.ec.europa.eu/api/v5_2/

# Weather API key (optional, for fetching real-time weather data)
WEATHER_API_KEY=

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database URL (separate database for testing)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/pv_cser_pro_test

# Enable test mode
TEST_MODE=false
