# PV-CSER Pro Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# Database Configuration (Railway PostgreSQL)
# =============================================================================
# Railway provides this URL automatically in the deployed environment
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password@your-railway-host.railway.app:5432/railway

# Connection pool settings (optional, defaults shown)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=1800

# =============================================================================
# Security
# =============================================================================
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# JWT settings (optional)
# ACCESS_TOKEN_EXPIRE_MINUTES=30
# ALGORITHM=HS256

# =============================================================================
# Application Settings
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to False in production)
DEBUG=True

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Streamlit Configuration
# =============================================================================
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
# STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# PV-CSER Specific Settings
# =============================================================================
# Default calculation parameters
# DEFAULT_ALBEDO=0.2
# DEFAULT_TILT=30
# DEFAULT_AZIMUTH=180

# IEC 61853 calculation precision
# CALCULATION_PRECISION=4
